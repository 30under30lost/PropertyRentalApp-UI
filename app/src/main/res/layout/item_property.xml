<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:padding="8dp"
              android:layout_width="match_parent"
              android:layout_height="@dimen/dp120">

    <ImageView
            android:id="@+id/img_property_item"
            android:layout_width="150dp"
            android:scaleType="centerCrop"
            android:layout_height="match_parent"
            tools:src="@tools:sample/avatars"
    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="5dp"
            android:orientation="vertical"
    >

        <TextView
                android:id="@+id/txt_propertyPrice_propertyItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/Black"
                tools:text="40,000 AED/yearl"
        />

        <LinearLayout
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
        >

            <TextView
                    android:id="@+id/txt_propertyType_property_item"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:textSize="16sp"
                    android:textColor="@color/Black"
                    tools:text="Office Space"
            />

            <LinearLayout
                    android:id="@+id/ll_amenities_property_item"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|end"
                    android:orientation="horizontal"
            >

                <ImageView
                        android:id="@+id/img_bed_property_item"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_bed"
                />

                <TextView
                        android:id="@+id/txt_bedCounter_property_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:text="1"
                />

                <ImageView
                        android:id="@+id/img_bathtub_property_item"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/ic_bathtub"
                />

                <TextView
                        android:id="@+id/txt_bathtubCounter_property_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:text="1"
                />
            </LinearLayout>
        </LinearLayout>

        <TextView
                android:id="@+id/txt_propertyAddress_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Marina View, Dubai Marina, Dubai"
        />
    </LinearLayout>
</LinearLayout>