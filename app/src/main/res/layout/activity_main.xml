<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        tools:context=".MainActivity">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_searchProperty"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:drawableLeft="@drawable/ic_search_black_24dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textAlignment="textStart"
            android:lineSpacingExtra="0dp"
            android:layout_marginTop="18dp"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:textSize="22sp"
            android:background="@null"
            android:hint="@string/search_property"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:id="@+id/view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/txt_searchProperty"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"/>
</androidx.constraintlayout.widget.ConstraintLayout>